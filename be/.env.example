MONGODB_URI=mongodb://localhost:27017
DB_NAME=bookstore
PORT=5000

# Currency conversion (Product prices stored in USD)
# Used to convert displayed prices and cart/order totals to VND
USD_TO_VND_RATE=25000

# JWT Secret
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Admin Credentials
ADMIN_EMAIL=admin@bookstore.com
ADMIN_PASSWORD=admin123

# Email Service (optional - for later)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@bookstore.com
EMAIL_API_KEY=your_email_api_key

# Payment Gateway (optional - for later)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
